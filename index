    <div class="sidebar" id="sidebar">
      <div class="close-btn" onclick="toggleSidebar()">Close</div>
      <div class="info" id="info">

    </div>
    </div>
  </div>

  <script>
    const pins = document.querySelectorAll('.pin');
    const sidebar = document.getElementById('sidebar');
    const info = document.getElementById('info');
  
    pins.forEach(pin => {
      pin.addEventListener('click', () => {
        const paintingName = pin.getAttribute('data-painting-name');
        const paintingImg = pin.getAttribute('data-painting-img');
        const timePeriod = pin.getAttribute('data-time-period');
        const description = pin.getAttribute('data-description');
        const artistName = pin.getAttribute('data-artist-name');
        const artistBackground = pin.getAttribute('data-artist-background');
        const artistImg = pin.getAttribute('data-artist-img');

        info.innerHTML = `
          <h2>${paintingName}</h2>
          <img src="${paintingImg}" alt="${paintingName}" class="painting-img" />
          <p><strong>Time Period:</strong> ${timePeriod}</p>
          <p><strong>Description:</strong> ${description}</p>
          <h3>Artist: ${artistName}</h3>
          <img src="${artistImg}" alt="${artistName}" class="artist-img" />
          <p><strong>Artist Background:</strong> ${artistBackground}</p>
        `;
        
        toggleSidebar();
      });
    });
  
    function toggleSidebar() {
      sidebar.classList.toggle('open');
    }
  </script>
